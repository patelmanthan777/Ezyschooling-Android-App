<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingRight="5dp"
    android:paddingLeft="4dp"
    android:background="@drawable/backtwo"


    >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username :"
            android:id="@+id/textView_usrname"
            android:layout_below="@+id/textView2"

            android:textSize="20dp"
            android:textColor="#080000"
            android:paddingTop="15dp"
            android:paddingLeft="6dp"
            android:fontFamily="sans-serif"
            android:editable="false"
            android:shadowColor="#510909"
            android:visibility="visible"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="113dp"
            android:layout_height="40dp"
            android:text="Password :"
            android:id="@+id/textView_paawrd"
            android:textSize="20dp"
            android:textColor="#100101"
            android:paddingTop="15dp"
            android:paddingLeft="6dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/textView_usrname"
            android:layout_alignLeft="@+id/textView_usrname"
            android:layout_alignStart="@+id/textView_usrname" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText1811"
            android:textColor="#0e0101"
            android:textSize="17dp"
            android:layout_below="@+id/textView2"
            android:layout_toRightOf="@+id/textView_paawrd" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText120"
            android:textSize="17dp"
            android:textColor="#0e0202"
            android:layout_below="@+id/editText1811"
            android:layout_alignLeft="@+id/editText1811"
            android:layout_alignStart="@+id/editText1811" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:onClick="GoToMain"
            android:id="@+id/button_login"
            android:textSize="16dp"
            android:text="Login"
            android:textColor="#e7f7f5"
            android:inputType="text"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/editText120"
            android:layout_centerHorizontal="true"
            android:background="@drawable/buttonbackground" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Sign Up"
            android:id="@+id/button20"
            android:textSize="16dp"
            android:onClick="Open_Main_Signup"
            android:textColor="#f6f9f9"
            android:inputType="text"

            android:layout_below="@+id/textView50"
            android:layout_alignLeft="@+id/button_login"
            android:layout_alignStart="@+id/button_login"
            android:background="@drawable/buttonbackground" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="  Forgot password or username? Click here"
            android:id="@+id/textView49"
            android:textSize="17dp"
            android:textColor="#0f610f"
            android:layout_below="@+id/button_login" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="  Sign up if you are a new user!"
            android:id="@+id/textView50"
            android:textSize="19dp"
            android:textColor="#ec2c2c"
            android:layout_marginTop="31dp"
            android:layout_below="@+id/textView49"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" EzySchooling"
            android:id="@+id/textView2"
            android:textColor="#010600"
            android:textSize="27dp"
            android:layout_marginTop="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

