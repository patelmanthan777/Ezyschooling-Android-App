<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"

   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="#f8fbfc">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Child&apos;s Name :    "
            android:id="@+id/textView_name"
            android:textSize="17dp"
            android:textColor="#060000"

            android:layout_below="@+id/textView17"
            android:autoText="false" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linerlayout1"
            android:layout_below="@+id/textView_name">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText_child_firstname"
                android:hint="First Name"
                android:textSize="16dp"
                android:textColor="#0b0101"
                android:layout_marginLeft="5dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:background="@android:drawable/editbox_background" />

            <EditText
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText_child_lastname"
                android:hint="Last Name"
                android:textSize="16dp"
                android:textColor="#090101"

                android:layout_below="@+id/textView_name"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="@android:drawable/editbox_background" />
        </LinearLayout>

        <TextView
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:text=" Gender :  "
            android:id="@+id/textView2"
            android:textSize="17dp"
            android:textColor="#0c0101"
            android:paddingTop="13dp"
            android:layout_below="@+id/linerlayout1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:id="@+id/spinner_gender"
            android:layout_alignBottom="@+id/textView2"
            android:layout_toRightOf="@+id/textView2"
            android:layout_toEndOf="@+id/textView2"
            />

        <TextView
