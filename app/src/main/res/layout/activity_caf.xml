                android:layout_alignParentEnd="true"
                android:textSize="16dp"
                android:layout_weight="1"
                android:background="@android:drawable/editbox_background" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
