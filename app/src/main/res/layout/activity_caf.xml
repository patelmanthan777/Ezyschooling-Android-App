            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/textView52"
            android:layout_alignEnd="@+id/textView52" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_mother_qualification"
            android:layout_alignBottom="@+id/textView53"
            android:layout_alignLeft="@+id/editText_father_occuaption"
            android:layout_alignStart="@+id/editText_father_occuaption"
            android:background="@android:drawable/editbox_background"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text=" Occupation :"
            android:id="@+id/textView54"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/textView53"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="17dp"
            android:textColor="#000000"
            android:paddingTop="5dp"
            android:layout_alignRight="@+id/textView53"
            android:layout_alignEnd="@+id/textView53" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_mother_occupation"
            android:layout_alignBottom="@+id/textView54"
            android:layout_alignLeft="@+id/editText_mother_qualification"
            android:layout_alignStart="@+id/editText_mother_qualification"
            android:background="@android:drawable/editbox_background"
            android:textSize="16dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/editText_bloodgrp"
            android:textColor="#0b0101"
            android:textSize="16dp"
            android:background="@android:drawable/editbox_background"
