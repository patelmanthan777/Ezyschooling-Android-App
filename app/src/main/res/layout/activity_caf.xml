            android:layout_alignEnd="@+id/linerlayout4"
            android:layout_alignLeft="@+id/spinner_gender"
            android:layout_alignStart="@+id/spinner_gender" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text=" Phone no:"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:id="@+id/textView9"
            android:layout_below="@+id/textView52"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="17dp"
            android:textColor="#040000"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_father_officeaddress"
            android:layout_below="@+id/textView52"
            android:layout_toEndOf="@+id/textView9"
            android:layout_toRightOf="@+id/textView9"
            android:textColor="#0b0101"
            android:textSize="16dp"
            android:inputType="number"
            android:background="@android:drawable/editbox_background"
            android:layout_alignLeft="@+id/editText_catagory"
