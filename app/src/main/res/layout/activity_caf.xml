        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_mother_annualincome"
            android:layout_below="@+id/editText_mother_officeaddress"
            android:textColor="#0b0101"
            android:textSize="16dp"
            android:inputType="number"
            android:background="@android:drawable/editbox_background"
            android:layout_toRightOf="@+id/textView4"
            android:layout_toEndOf="@+id/textView4" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:text="New Text"
            android:id="@+id/textView12"
            android:background="#050000"
            android:layout_below="@+id/textView14"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="23dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:text="New Text"
            android:id="@+id/textView13"
            android:layout_marginTop="47dp"
            android:background="#060000"
            android:layout_below="@+id/editText_address" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  Common Admission Form"
