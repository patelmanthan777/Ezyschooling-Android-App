            android:layout_height="50dp"
            android:text=" D.O.B :"
            android:id="@+id/textView3"
            android:textSize="17dp"
            android:textColor="#090101"
            android:paddingTop="11dp"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linerlayout4"
            android:layout_below="@+id/textView3">
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerdob"
                android:layout_weight="1"
                android:layout_marginLeft="3dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />
            <Spinner
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerdob2"
                android:layout_alignBottom="@+id/spinnerdob"
                android:layout_toRightOf="@+id/spinnerdob"
                android:layout_toEndOf="@+id/spinnerdob" />

            <Spinner
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerdob3"
                android:layout_alignBottom="@+id/spinnerdob2"
                android:layout_toRightOf="@+id/spinnerdob2"
                android:layout_toEndOf="@+id/spinnerdob2" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Email id :"
            android:layout_below="@id/linerlayout4"
            android:id="@+id/textview_bloodgrp"
            android:textSize="17dp"
            android:textColor="#090101"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="15dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Father&apos;s Name : "
            android:id="@+id/textView4"
            android:textSize="17dp"
            android:textColor="#0f0202"
