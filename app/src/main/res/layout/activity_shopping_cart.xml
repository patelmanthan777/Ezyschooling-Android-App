<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_height="fill_parent"
    android:layout_width="fill_parent" android:background="#ffffff">

    <TextView android:id="@+id/TextView01" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="24dip"  android:text="MySchools"></TextView>
    <ListView android:layout_height="wrap_content"
        android:layout_weight="1" android:id="@+id/ListViewCatalog"
        android:layout_width="fill_parent" android:background="#ffffff"
        android:cacheColorHint="#ffffff" android:clickable="true"
        android:choiceMode="multipleChoice">

    </ListView>
    <LinearLayout android:id="@+id/LinearLayout01"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dip">
        <Button android:layout_width="match_parent"
            android:layout_height="35dp" android:id="@+id/ButtonRemoveFromCart"
            android:text="Remove from Cart"
            android:background="@drawable/buttonbackground"
            android:inputType="text"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:textColor="#ffffff"></Button>
        <Button android:id="@+id/Button02_checkoutsend" android:layout_width="match_parent"
            android:layout_height="35dp" android:text="Proceed "
            android:background="@drawable/buttonbackground"
            android:inputType="text"
            android:layout_weight="1"
            android:textColor="#ffffff"></Button>
    </LinearLayout>


</LinearLayout>